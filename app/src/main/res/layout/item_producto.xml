<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/NoProduct"
        android:layout_width="109dp"
        android:layout_height="34dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="36dp"
        android:text=""
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/imageV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Preci"
        android:layout_width="34dp"
        android:layout_height="10dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:layout_marginBottom="20dp"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageV"
        app:layout_constraintTop_toBottomOf="@id/Descripcio" />

    <TextView
        android:id="@+id/Descripcio"
        android:layout_width="98dp"
        android:layout_height="54dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="20dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/imageV"
        app:layout_constraintTop_toBottomOf="@id/NoProduct" />

    <ImageView
        android:id="@+id/imageV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="16dp"
        android:text="Detalles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageV" />

</androidx.constraintlayout.widget.ConstraintLayout>